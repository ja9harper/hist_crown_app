
<div class="welcome-text">
  <h1>step back in time</h1>
  <div class="form" id="login">
  <h2>Sign In</h2>
</br>
  <div id="login">
    <%= form_tag(session_path) do %>
      <%= text_field_tag :email, nil, placeholder: 'Email' %><br/>
      <%= password_field_tag :password, nil, placeholder: 'Password' %><br/><br/>
      <%= submit_tag('Login') %>
    <% end %>
   <div id="signup">
    <%= form_tag(session_path) do %>
      <%= text_field_tag :first_name, nil, placeholder: 'First Name' %></br>
      <%= text_field_tag :last_name, nil, placeholder: 'Last Name' %></br>
      <%= text_field_tag :email, nil, placeholder: 'Email' %><br/>
      <%= password_field_tag :password, nil, placeholder: 'Password' %><br/><br/>
      <%= submit_tag('Welcome') %>
      <% end %>
   </div>

    <p style="color: red"><%= flash[:error] %></p>
 </div>